{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"align-import"
	],
	"env": {
		"es6": true,
		"node": true
	},
	"rules": {
		// for `Common`:
		"camelcase": [
			"error",
			{
				"properties": "never",
				"ignoreDestructuring": true,
				"ignoreImports": true
			}
		],
		"semi": "error",
		"quotes": [
			"error",
			"single"
		],
		"prefer-template": "error",
		"template-curly-spacing": "error",
		"curly": [
			"error"
		],
		"keyword-spacing": "error",
		"brace-style": [
			"error",
			"allman"
		],
		// for `Variable`:
		"no-var": "error",
		"prefer-const": "warn",
		// for `List`:
		"comma-dangle": [
			"error",
			{
				"arrays": "always-multiline",
				"objects": "always-multiline",
				"imports": "always-multiline",
				"exports": "always-multiline",
				"functions": "always-multiline"
			}
		],
		"comma-spacing": "error",
		// for `Object`:
		"quote-props": [
			"error",
			"consistent"
		],
		"object-curly-spacing": [
			"error",
			"always",
			{
				"arraysInObjects": false,
				"objectsInObjects": false
			}
		],
		"key-spacing": [
			"error",
			{
				"beforeColon": true,
				"afterColon": true,
				"align": "colon"
			}
		],
		// for `Array`:
		"array-bracket-spacing": [
			"error",
			"always",
			{
				"objectsInArrays": false,
				"arraysInArrays": false
			}
		],
		// for `Function`:
		"space-before-blocks": "error",
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "always",
				"asyncArrow": "always"
			}
		],
		"arrow-spacing": "error",
		"prefer-arrow-callback": "error",
		// for `Plugins`:
		"align-import/align-import": "error"
	}
}