{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationMap": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
	},
	"include": [ "src", "test" ],
	"exclude": [ "node_modules" ]
}