{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [ "ESNext", "DOM" ],
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"strictFunctionTypes": true,
		"target": "ES5",
		"resolveJsonModule": true,
	},
	"include": [ "src" ],
	"exclude": [ "node_modules", "dist" ]
}